<%= form_with(model: photo, local: true) do |form| %>
  <%= form.hidden_field :album_id %>
  <%= image_tag photo.image, class: 'img-fluid' if photo.image.attached? %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>
  <div class="form-group form-check">
    <%= form.check_box :favourite, class: 'form-check-input' %>
    <%= form.label :favourite, class:'form-check-label' %>
  </div>
  <div class="form-group">
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>
  <%= form.submit 'Save', class: 'btn btn-secondary btn-sm' %>
<% end %>
